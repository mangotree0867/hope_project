<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/surface_card">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="채팅 배경 선택"
        android:textSize="20sp"
        android:textColor="@color/text_primary"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="20dp" />

    <GridLayout
        android:id="@+id/colorGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="2">

        <!-- Default Dark -->
        <FrameLayout
            android:id="@+id/color_default"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:background="@color/chat_bg_default"
            android:clickable="true"
            android:focusable="true">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="기본"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </FrameLayout>

        <!-- Midnight Blue -->
        <FrameLayout
            android:id="@+id/color_midnight"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:background="@color/chat_bg_midnight"
            android:clickable="true"
            android:focusable="true">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="자정"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </FrameLayout>

        <!-- Ocean -->
        <FrameLayout
            android:id="@+id/color_ocean"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:background="@color/chat_bg_ocean"
            android:clickable="true"
            android:focusable="true">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="바다"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </FrameLayout>

        <!-- Forest -->
        <FrameLayout
            android:id="@+id/color_forest"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:background="@color/chat_bg_forest"
            android:clickable="true"
            android:focusable="true">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="숲"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </FrameLayout>

        <!-- Purple -->
        <FrameLayout
            android:id="@+id/color_purple"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:background="@color/chat_bg_purple"
            android:clickable="true"
            android:focusable="true">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="보라"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </FrameLayout>

        <!-- Charcoal -->
        <FrameLayout
            android:id="@+id/color_charcoal"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:background="@color/chat_bg_charcoal"
            android:clickable="true"
            android:focusable="true">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="차콜"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </FrameLayout>

    </GridLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_background"
    android:layout_gravity="center">

    <!-- Dialog Header -->
    <LinearLayout
        android:id="@+id/dialog_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header_gradient_yellow"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Video"
            android:textColor="#3D2914"
            android:textSize="20sp"
            android:fontFamily="sans-serif-medium"
            android:layout_gravity="center" />

    </LinearLayout>

    <!-- Message -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose how to add your video"
        android:textColor="@color/text_primary"
        android:textSize="16sp"
        android:gravity="center"
        android:padding="20dp" />

    <!-- Bottom Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <!-- Record Video Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/option_record"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:background="@drawable/button_gradient_primary"
            android:drawableTop="@android:drawable/ic_menu_camera"
            android:drawableTint="@color/white"
            android:drawablePadding="8dp"
            android:text="Record"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:fontFamily="sans-serif-medium"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp" />

        <!-- Gallery Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/option_gallery"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:background="@drawable/button_gradient_secondary"
            android:drawableTop="@android:drawable/ic_menu_gallery"
            android:drawableTint="@color/white"
            android:drawablePadding="8dp"
            android:text="Gallery"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:fontFamily="sans-serif-medium"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp" />

    </LinearLayout>

    <!-- Cancel Button -->
    <TextView
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textColor="@color/text_secondary"
        android:textSize="16sp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:padding="16dp"
        android:background="?attr/selectableItemBackgroundBorderless" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/primary_red_dark"
                android:endColor="@color/primary_red"
                android:angle="135" />
            <corners android:radius="28dp" />
            <padding
                android:left="24dp"
                android:right="24dp"
                android:top="14dp"
                android:bottom="14dp" />
        </shape>
    </item>
    
    <!-- Default state -->
    <item>
        <layer-list>
            <!-- Shadow layer -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#40000000" />
                    <corners android:radius="28dp" />
                </shape>
            </item>
            <!-- Main button -->
            <item android:bottom="3dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:startColor="@color/button_gradient_start"
                        android:endColor="@color/button_gradient_end"
                        android:angle="135" />
                    <corners android:radius="28dp" />
                    <padding
                        android:left="24dp"
                        android:right="24dp"
                        android:top="14dp"
                        android:bottom="14dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>